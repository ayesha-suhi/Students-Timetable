<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/colorMaterialGreen"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="105dp"
            android:id="@+id/ivYear1"
            android:layout_marginLeft="11dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvYear1"
            android:text="Class Routine"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/ivYear1"
            android:textSize="24sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescription"
            android:text="Get to know the regular class routine"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/tvYear1"
            android:layout_toRightOf="@+id/ivYear1"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvClick"
            android:textSize="12dp"
            android:text="Click here"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tvDescription"
            android:layout_alignBottom="@id/ivYear1"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>